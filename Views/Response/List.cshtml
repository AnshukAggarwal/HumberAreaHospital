@model List<HumberAreaHospitalProject.Models.Question>

@{
    ViewBag.Title = "List";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    
    <div>
        <form method="post">
            @{
                foreach (var question in Model)
                { <div>
                        <div>@question.QuestionText</div>
                        
                        <div><input type="text" name="ResponseText"/></div>
                        <input type="hidden" name="Count" id="Count"value="@question.QuestionID" />
                    </div>
                }

            }
            
            <input type="submit" value="submit" />
        </form>

    </div>
</body>
</html>
